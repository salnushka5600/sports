<Window x:Class="Sports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sports"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="LightPink"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Label Content="Спортсмены" FontSize="50" Grid.ColumnSpan="3"  Height="100" VerticalAlignment="Top" HorizontalAlignment="Center"   Foreground="White"/>

        <Button Content ="Фильтр" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1" Background="Pink"   Click="Filtrrr" Opacity="20"  FontStyle="Italic"/>
        <Button Content ="Добавить атлета" Width="143" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" Background="Pink" Click="AthletDob" FontStyle="Italic" />
        <Button Content ="Регистрация" Width="150" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2" Background="Pink"  Click="Registration"  FontStyle="Italic"/>
        <Button Content ="Добавить тренировку" Width="143" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2" Background="pink"  Click="WorkoutDob" FontStyle="Italic"/>
        

    </Grid>


</Window>
