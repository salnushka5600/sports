<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8" >
            <TextBox x:Name="tbSearch" Width="260"  />
            <Button Content="Обновить" />
        </StackPanel>
        <DataGrid x:Name="grid" Margin="8" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Datetime, StringFormat=g}" Width="*"/>
                <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="*"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>




</Window>
